{% extends 'base.html.twig' %}

{% block title %}Positions{% endblock %}


{% block body %}
    <div id="showcase">
        <h1>Positions</h1>
        <p>List of all positions</p>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Entry Time</th>
            <th>Position</th>
            <th>Symbol</th>
            <th>Type</th>
            <th>Volume</th>
            <th>Entry</th>
            <th>Stop</th>
            <th>Take Profit</th>
            <th>Exit Time</th>
            <th>Exit</th>
            <th>Commission</th>
            <th>Swap</th>
            <th>Profit</th>
            <th>System</th>
            <th>Strategy</th>
            <th>Asset Class</th>
            <th>Grade</th>
            <th>Week</th>
        </tr>
        </thead>
        <tbody>
        {% for id, position in positions %}
            <tr>
                <td>{{ position.entryTime ? position.entryTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ position.position }}</td>
                <td>{{ position.symbol }}</td>
                <td>{{ position.type }}</td>
                <td>{{ position.volume }}</td>
                <td>{{ position.entry }}</td>
                <td>{{ position.stopLoss }}</td>
                <td>{{ position.takeProfit }}</td>
                <td>{{ position.exitTime ? position.exitTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ position.exit }}</td>
                <td>{{ position.commission }}</td>
                <td>{{ position.swap }}</td>
                <td>{{ position.profit }}</td>
                <td>{{ position.system }}</td>
                <td>{{ position.strategy }}</td>
                <td>{{ position.assetClass }}</td>
                <td>{{ position.grade }}</td>
                <td>{{ position.week }}</td>
                <td>
                    <a href="{{ path('app_position_edit', {id: position.id}) }}" class="btn btn-secondary">Edit</a>
                    <form method="post" action="{{ path('app_position_delete', {id: position.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ position.id) }}">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
