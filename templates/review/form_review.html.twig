{# templates/playbook/form_playbook.html.twig #}
<div id="showcase">
    <h1>{{ title }}</h1>
    <p>Share your thoughts on your latest trades.</p>
</div>

<div class="container">
    <div class="form-container">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'id': 'title', 'required': 'required'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.body) }}
            {{ form_widget(form.body, {'attr': {'class': 'form-control', 'id': 'body', 'rows': '5', 'required': 'required'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
</div>